
count = 1
number_of_test_cases = input("Enter the number of test cases: ")


while count<=int(number_of_test_cases):

    n = input("Enter the length of the string: ")
    s = input("Enter the string: ")

    n1 = int(n)

    goodString = True

    for i in range(0,(n1//2)):
        if(list(s)[i]!=list(s)[(n1//2)+i]):
            goodString = False
            break

    if goodString==True :
        print("Yes")
    else:
        print("No")

    count = count+1

